<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creaciÃ³n'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

    <!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
            
			<table class="col-12">
				<thead>
					<td>id</td>
					<td>Nombre</td>
					<td>Precio</td>
					<td>Categoria</td>
					<td>Descuento</td>
					<td>Acciones</td>
					<td><a href="/products/create" class="btn btn-primary"> Crear nuevo</a></td>
				</thead>
				<tbody>
					<% products.forEach(product => { %>
						<tr>
							<td><%= product.id %></td>
							<td><%= product.name %></td>
							<td><%= product.price %></td>
							<td><%= product.category ? product.category : 'Sin categoria' %></td>
							<td><%= product.discount %></td>
							<td>
								<a href="/products/detail/<%= product.id %>" class="btn btn-info">Detalle</a>
								<a href="/products/edit/<%= product.id %>" class="btn btn-success">Editar</a>
							
								<form action="/products/<%= product.id %>?_method=DELETE" method="post" class="d-inline form-delete">
									<button class="btn btn-danger" type="submit">Borrar</button>
								</form>
							</td>
						</tr>
					<% }) %>
				</tbody>

			</table>
		</div>
	</div>
	<!-- /todos los productos -->

	


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>